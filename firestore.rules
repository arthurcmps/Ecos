rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Função para verificar se o usuário é um admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/usuarios/$(userId)) &&
             get(/databases/$(database)/documents/usuarios/$(userId)).data.role == 'admin';
    }

    // Qualquer um pode ler os poemas e comentários
    match /poemas/{poemaId} {
      allow read: if true;
      
      // Apenas admins podem criar, editar ou apagar poemas
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    match /poemas/{poemaId}/comentarios/{comentarioId} {
        allow read: if true;
        // Qualquer usuário autenticado pode comentar
        allow create: if request.auth != null;
    }

    // Regras para a coleção de usuários
    match /usuarios/{userId} {
        // Um usuário só pode criar seu próprio registro
        allow create: if request.auth.uid == userId;
        // Qualquer usuário autenticado pode ler os dados de outros (para mostrar nome nos comentários, etc.)
        allow read: if request.auth != null;
        // Apenas o próprio usuário ou um admin pode atualizar seu perfil (não implementado, mas é uma boa prática)
        allow update: if request.auth.uid == userId || isAdmin(request.auth.uid);
    }
  }
}